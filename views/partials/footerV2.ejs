<script>
    const cnf = document.getElementById('confirm')
    const password = document.getElementById('password')
    const validate = () => {
        if (cnf.value != password.value) {
            cnf.setCustomValidity(`Passwords don't match`)
            return false
        } else {
            cnf.setCustomValidity('')
            return true;
        }
    }
    const newfunc = () => {
        let match = validate();
        cnf.style.borderStyle = 'solid'
        cnf.style.borderWidth = '2px'
        if (!match) {
            cnf.style.borderColor = 'red'
        }
        else {
            cnf.style.borderColor = '#3ce355'
        }
    }
    password.onchange = validate;
    cnf.onkeyup = validate;
    cnf.onkeyup = newfunc;
</script>

